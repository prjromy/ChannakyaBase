
@model ChannakyaAccounting.Models.Models.Voucher1

@{ 
    var type = 0;
    if(ViewBag.Id!=null)
    {
        type = ViewBag.Id;
    }
}




@for (int i = 0; i < Model.Voucher2.Count(); i++)
{

    if (type == 0)
    {

        @Html.TextBoxFor(x => Model.Voucher2.ToList()[i].DebitAmount, new { @class = "form-control", @style = "width:100%" })

    }
    else
    {

        @Html.TextBoxFor(x => Model.Voucher2.ToList()[i].CreditAmount, new { @class = "form-control", @style = "width:100%" })

    }
}