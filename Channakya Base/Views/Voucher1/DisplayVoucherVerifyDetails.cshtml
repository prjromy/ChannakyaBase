                <div class="col-md-8">
                 @voucherService.GetVoucherTypeName(Model.VNId)
                </div>
            </div>
            <div class="col-md-4">
                <label class="col-md-4"> Currency:</label>
                <div class="col-md-8">
           @Model.CurrencyType.CurrencyName
                </div>
            </div>
            <div class="col-md-4">
                @Html.Label("BatchNo:", htmlAttributes: new { @class = " col-md-4" })
