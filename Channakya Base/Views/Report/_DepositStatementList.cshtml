@model IEnumerable<ChannakyaBase.Model.ViewModel.DepositStatementViewModel>
@using ChannakyaBase.BLL
@using ChannakyaBase.BLL.Service
@{
    CommonService cmService = new CommonService();

}
<div class="box-body table-responsive no-padding">
   
        <table class="table table-bordered table-condensed">
            <thead>
                <tr>

                    <th>

                        @Html.DisplayName("TDate")
                    </th>
                    <th>

                        @Html.DisplayName("VDate")
                    </th>
                    
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Debit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Credit)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Balance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DC)
                    </th>

                </tr>
            </thead>
            @foreach (var item in Model)
            {
                string color = "";
                if (item.IsMarked)
                {
                    color = "#57d48240";
                }
                <tr style="background-color:@color">


                    <td>
                        @if (item.Tdate != Convert.ToDateTime("1/1/0001 12:00:00 AM"))
                        {
                            <span>@cmService.GetEnglishDate(Convert.ToDateTime(item.Tdate))</span>
                        }
                    </td>
                    <td>
                        @if (item.Vdate != null)
                {
                            <span> @cmService.GetEnglishDate(Convert.ToDateTime(item.Vdate))</span>
                        }
                    </td>
                   
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <span class="control-label">@Convert.ToDecimal(item.Debit).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>
                    </td>
                    <td>
                        <span class="control-label">@Convert.ToDecimal(item.Credit).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>
                    </td>

                    <td>
                        <span class="control-label">@Convert.ToDecimal(item.Balance).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DC)
                    </td>
                </tr>
            }

        </table>
    </div>