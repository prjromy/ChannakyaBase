@model  ChannakyaBase.Model.ViewModel.CommonReportModel
@using ChannakyaBase.BLL.Service
@using ChannakyaCustomeDatePicker.Helper;
@{

}
<div id='common-pop-up-div' class='modal fade' role='dialog'></div>
<div class="box box-success">
    <div class="box-header with-border">

        <h3 class="box-title">Interest to Capitalise </h3>


        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div><!-- /.box-tools -->
    </div><!-- /.box-header -->

    <div class="customer-main details">
        <fieldset>
            <div class="row">

                <div class="form-group">
                    <div class="col-md-3">
                        <label>Branch Name</label>
                        <div class="form-grop_padding">
                            @Html.DropDownListFor(x => x.branchId, ReportUtilityService.GetBranchList(Model.branchId), new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label>
                            Date
                        </label>
                        <div class="form-grop_padding">

                            @Html.DatePicker(x => x.FromDate)
                        </div>
                    </div>

                </div>


                <div class="form-group col-md-12">
                    <input type="button" value="ExportToExcel" class="btn btn-info pull-right btn-interestToCapitalizeAccount-export-to-excel" />

                    <button type="button" name="btn-account-holder-search" id="btn-report-loan-related" class="btn btn-primary pull-right" style="margin-left: 0px;" value="Generate">
                        <i class="fa fa-search"></i>
                    </button>
                </div>


            </div>
        </fieldset>

        <div class="box-header with-border with-loan-Report-View">

        </div>

    </div>
</div>
<script src="~/Scripts/DatePicker/Channakya-DatePicker.js"></script>

<script>
    $('#btn-report-loan-related').on('click', function () {
        var branchId = $('#branchId').val();
        var fromDate = $('#FromDate').val();

        $.ajax({
            type: "GET",
            url: "/Report/_InterestTOCapitalizeAccount",
            datatype: "HTML",
            data: {
                fromDate: fromDate,
                branchId: branchId
            },
            success: function (result) {
                $('.with-loan-Report-View').html("");
                $('.with-loan-Report-View').html(result);
            }
        })

    });
    $('.btn-interestToCapitalizeAccount-export-to-excel').on('click', function (e) {
        debugger
        e.stopImmediatePropagation();
        e.preventDefault()
       
        var branchId = $("#branchId").val();
        var branchName = $('#branchId option:selected').text();
        var Date = $('#DateAD').val();
      
        //  window.location = "/Report/ExportToExcel?fromDate=" + fromDate + "&toDate=" + toDate
        window.open("/Report/InterestToCapitalizeAccountExportToExcel?branchId=" + branchId + "&branchName=" + branchName + " &date=" + Date)

    })


</script>


