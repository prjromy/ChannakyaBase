
@model IEnumerable<ChannakyaBase.Model.ViewModel.ShareHolderList>
@using ChannakyaBase.BLL
@using ChannakyaBase.BLL.Service
@{
    int PurQty = 0;
    decimal PurAmount = 0;
    int RetQty = 0;
    decimal RetAmount = 0;
    int OutQty = 0;
    decimal Balance = 0;
    CommonService cmService = new CommonService();

}
<div class="table table-responsive">

    <table class="table">

        <tr>

            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Purchase.Quantity
            </th>
            <th>
                Purchase.Amount
            </th>
            <th>
                Return.Quantity
            </th>
            <th>
                Return.Amount
            </th>
            <th>
                Output.Quantity
            </th>
            <th>
                Balance
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>

                @*<td style="text-align:right">*@
                
                <td>
                    @item.RegNo
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <span>@item.SQtyP</span>
                </td>
                <td>
                    <span> @Convert.ToDecimal(item.AmtP).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>

                </td>
                <td>
                    <span>@item.SQtyR</span>
                </td>
                <td>
                    <span> @Convert.ToDecimal(item.AmtR).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>

                </td>
                <td >
                    <span>@item.SQty</span>
                </td>
                <td>
                    <span> @Convert.ToDecimal(item.Balance).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>
                </td>
                @{PurQty += (int)item.SQtyP;
                    PurAmount += (decimal)item.AmtP;
                    RetQty += (int)item.SQtyR;
                    RetAmount += (decimal)item.AmtR;
                    OutQty += (int)item.SQty;
                    Balance += (decimal)item.Balance;
                }

            </tr>
                    }

        <tr>
            <th colspan="2">  Total:</th>



            <td style="text-align:right">
                @PurQty
            </td>

            <td style="text-align:right">
                <span> @Convert.ToDecimal(PurAmount).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>

            </td>
            <td style="text-align:right">
                @RetQty
            </td>
            <td style="text-align:right">
                <span>  @Convert.ToDecimal(RetAmount).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>
            </td>
            <td style="text-align:right">
                @OutQty
            </td>
            <td style="text-align:right">
                <span>  @Convert.ToDecimal(Balance).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>

            </td>
        </tr>

    </table>
    </div>