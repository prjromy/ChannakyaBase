@model  ChannakyaBase.Model.ViewModel.TransactionPayableModel
@using ChannakyaBase.BLL
@using MoreLinq;
@{

   
    decimal Sumbal = 0;
    CommonService commonService = new CommonService();
  
}
<div class="box-body table-responsive no-padding" style="font-size:12px;">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>
                    Account Number
                </th>

                <th>
                    Name
                </th>
                
                <th>Balance</th>
            </tr>
        </thead>
     
            @foreach (var item in Model.InterestList)
            {
                <tr>
                    <td>@item.PName</td>

                    <td>
                        @item.Accno
                    </td>

                    <td>
                        @commonService.GetCustomerNameByIaccno(item.Iaccno)
                    </td>                   
                    <td style="text-align:right">@item.Balance.ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</td>
                    
                </tr>
                Sumbal += item.Balance;
               
            }
            <tr>
                <th colspan="3">Total</th>
                <th style="text-align:right">@Sumbal.ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</th>
              
            </tr>
      
           
        

    </table>

</div>
















