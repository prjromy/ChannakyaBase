@model  ChannakyaBase.Model.ViewModel.DepositStatementViewModel
@using ChannakyaBase.BLL
@using ChannakyaBase.BLL.Service
@{
    CommonService cmService = new CommonService();

}
<fieldset>
    <legend>Account Details</legend>

    <table class="table table-bordered table-condensed">
        <tbody>
            <tr>
                <th>
                    Account No:
                </th>
                <th>
                    Reg Date:
                </th>
                <th>
                    Interest Rate
                </th>
                <th>
                    Interest On Balance
                </th>
            </tr>

        </tbody>
        <tr>
            <td>
                <span class="form-control">@Model.Accno </span>
            </td>

            <td>
                <span class="form-control">@cmService.GetDate(Model.RegisteredDate) </span>
            </td>

            <td>
                <span class="form-control">@Convert.ToDecimal(Model.InterestRate).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>
            </td>
            <td>
                <span class="form-control">@Model.IonBal </span>
            </td>
        </tr>
        <tbody>
            <tr>
            <tr>
                <th>
                    A/C Holder:
                </th>
                <th>
                    Accured Interest:
                </th>
                <th>
                    Product Name:
                </th>
                <th>
                    Scheme Name:
                </th>
            </tr>
            <tr>
                <td>
                    <span class="form-control">@Model.Aname </span>
                </td>

                <td>
                    <span class="form-control">@Model.AccuredInterest </span>
                </td>

                <td>
                    <span class="form-control">@Model.ProductName </span>
                </td>
                <td>
                    <span class="form-control">@Model.SchemeName </span>
                </td>
            </tr>
        </tbody>
    </table>

</fieldset>
<div class="deposit-statement-list">
    @Html.Partial("_DepositStatementList", Model.DepositStatementViewModelList)
</div>
<fieldset>
    <table class="table table-bordered table-condensed">
        <tbody>
            <tr>
                <td>
                    Total Debit:
                </td>
                <td>
                    Count:
                </td>
                <td>
                 <span class="form-control">   @Model.TotalDebitCount </span>
                </td>
                <td>
                    <span class="form-control">@Convert.ToDecimal(Model.TotalDebited).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>
                </td>

            </tr>
            <tr>
                <td>
                    Total Credit:
                </td>
                <td>
                    Count:
                </td>
                <td>
                   <span class="form-control">  @Model.TotalCreditCount </span>
                </td>
                <td>
                    <span class="form-control">@Convert.ToDecimal(Model.TotalCredited).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>
                </td>

            </tr>

        </tbody>
        <tr>
            <td>
                Closing Balance:
            </td>
            <td>
                <span class="form-control">@Convert.ToDecimal(Model.ClosingBalance).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>
            </td>
        </tr>

    </table>
    <div class="col-md-12">


        <table class="table  mark-passbook-date">

            <tr>
                <td class="col-md-3">
                    @Html.DropDownListFor(model => model.Tdate, Model.MarkDateList, htmlAttributes: new { @class = "form-control marked-date" })
                    @Html.ValidationMessageFor(model => model.Vdate, "", new { @class = "text-danger" })
                </td>
                <td class="col-md-1"><input type="button" value="Mark" class="btn btn-info btn-sm btn-mark-passbook-date" /></td>
                <td class="col-md-1" style="text-align:right;"><span class="control-label" style="text-align:right;">Marked PassBook </span> </td>
                <td class="col-md-1">
                    <p style="top: 19px;width: 20px;height:20px;border: 1px solid #000;background-color:#57d48240;"></p>
                </td>
            </tr>

        </table>
    </div>
</fieldset>