@model IEnumerable<ChannakyaBase.Model.ViewModel.SharePurchaseDetails>
@using ChannakyaBase.BLL
@using ChannakyaBase.BLL.Service
    @{ 
        CommonService cmService = new CommonService();

    }
<div class="table table-responsive">
    <table class="table">
        <tr>
            <th>
                Date(AD)
            </th>
            <th>
                Date(BS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                CertificateNo
            </th>
            <th>
                From
            </th>
            <th>
                To
            </th>
            <th>
                Quantity
            </th>
            <th>
                Amount
            </th>
            <th>
                Type
            </th>
            <th>
                Cash/NonCash
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.PDate != Convert.ToDateTime("1/1/0001 12:00:00 AM"))
                {
                        <span>@cmService.GetEnglishDate(Convert.ToDateTime(item.PDate))</span>
                    }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PDateNep)
                </td>
                <td>
                    @item.RegNo
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @item.SCrtNo
                </td>
                <td>
                    @item.FSNo
                </td>
                <td>
                    @item.TSNo
                </td>
                <td>
                    @item.SQty
                </td>
                <td>
                    <span> @Convert.ToDecimal(item.Amt).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span>

                </td>
                @if (item.SType == 1)
                {
                    <td>
                        <span> Ordinary</span>
                    </td>
                }
                else
                {
                    <td>
                        <span> Promoter</span>
                    </td>
                }
                @if (item.ttype == 1)
                {
                    <td>
                        <span> Cash</span>
                    </td>
                }
                else
                {
                    <td>
                        <span> Non-Cash</span>
                    </td>
                }

                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>

            </tr>
        }

    </table>

    </div>