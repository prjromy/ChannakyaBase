@model IEnumerable<ChannakyaBase.Model.ViewModel.OverdraftInterestCapitalizationModel>
@using ChannakyaBase.BLL
@{
  
    CommonService commonService = new CommonService();
    decimal sumBalance = 0;
}

<div class="box-body table-responsive no-padding">
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                AccountNumber
            </th>
            <th>
                AccountName
            </th>
            <th>
                Trnx Date
            </th>
            <th>
                Capitalize Amt
            </th>
            <th>
                Transfered To
            </th>
            <th>
                Trnx No
            </th>
            <th>
                Voucher No
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Accno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tdate)
                </td>
                <td style="text-align:right!important">
                    @Convert.ToDecimal(item.CapAmt).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)
                
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransferedTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.vno)
                </td>
              
            </tr>
            sumBalance += item.CapAmt;
        }
        <tr>
            <td colspan="3">Total</td>
            <td style="text-align:right!important">@sumBalance.ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</td>
            <td colspan="3"></td>
        </tr>
    </table>
    </div>