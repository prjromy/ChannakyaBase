    <!-- Tell the browser to be responsive to screen width -->
    <style>
        html {
            font-size: 16px;
            font-family: 'Abel', sans-serif;
        }

        .popupalert {
            display: block;
            padding: 0px;
            background-color: #67af69;
            text-align: center;
            position: relative;
        }

        .popover-conatiner {
            position: fixed;
            bottom: 0;
            right: 0;
            padding: 0;
        }

            .popover-conatiner h4 {
                padding: 20px;
                /* background-color: #67af69; */
                color: #fff;
                padding-right: 30px;
            }

        .noticlose {
            color: #fff;
            position: absolute;
            right: 5px;
            top: 5px;
            cursor: pointer;
        }
    </style>




</head>

<body class="hold-transition skin-blue-light sidebar-mini fixed main-application-body" style="font-family: 'Abel', sans-serif;">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/scripts")

    @*<script src="~/AdminLTE/plugins/slimScroll/jquery.slimscroll.min.js"></script>*@


    <script src="~/Scripts/jquery-1.11.1.ui.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
