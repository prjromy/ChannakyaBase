@model ChannakyaBase.DAL.DatabaseModel.CertificateDef
@using (Ajax.BeginForm("_Create", "CertificateDef",   new AjaxOptions
               {
                   UpdateTargetId = "certificate-list",
                   InsertionMode = InsertionMode.Replace,
                   HttpMethod = "Post",
                   OnSuccess = "createSuccess"
                   //OnFailure = "errMessage"

               }
               , new { id = "createSubmitForm" }))
{
    <div class="form-horizontal createform">
        <fieldset>
            <legend>New Certificate </legend>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.CCCert, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.CCCert, new { htmlAttributes = new { autofocus = "autofocus", @class = "form-control focusdiv", @placeholder = "Certificate Name" } })
                    @Html.ValidationMessageFor(model => model.CCCert, "", new { @class = "text-danger" })
                
                     <br />
                    <input type="button" value="Save" id="btn-save-submit" class="btn btn-default btn-save " />
                    @*<input type="submit" value="Save" class="btn btn-default btn-save " />*@
                    <input type="button" value="Cancel" id="btn-cancel" class="btn btn-default btn-cancel" />
                </div>
            </div>
        </fieldset>

    </div>
}
