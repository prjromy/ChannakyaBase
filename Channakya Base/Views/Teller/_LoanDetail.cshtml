                            <tr>
                                <th> Status </th>
                                <th>Change On</th>
                                <th>Change By</th>

                            </tr>

                            @foreach (var item in Model.StatusLogList)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelitem => item.StatusName)</td>
                                    <td>@Html.DisplayFor(modelitem => item.ChangeOn)</td>
                                    <th>@commonService.EmployeeInfoUserId(item.UserID).EmployeeName</th>
