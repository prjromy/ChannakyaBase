                                    <td></td>
                                </tr>
                              
                                <tr>
                                    <th>
                                        Nominee Account
                                    </th>
                                    <td>
                                        @foreach (var item in Model.ANomAccs)
                                        {
                                            <span class="control-label">@item.NIAccno.ToString()</span>
                                        }
                                    </td>
                                    <th>
                                        Interest Rate
