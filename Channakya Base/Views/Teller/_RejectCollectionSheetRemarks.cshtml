@model ChannakyaBase.Model.ViewModel.CollectionSheetViewModel
@using ChannakyaBase.BLL.Service
@{
    ViewBag.Title = "CollectionLogList";
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <span class="close" id="closeTop" data-dismiss="modal" aria-hidden="true">&times;</span>
            <h4 class="modal-title">Rejecting Remarks</h4>
        </div>
        <div class="modal-body">
            <div class="content-box">
                <div class="row">
                    <div class="col-md-12">

                        <div class="table-responsive table-click-CollectionLog">


                            <table class="table table-bordered table-striped table-click-CollectionLog-list table-hover">
                                <thead class="table-head">
                                 
                                </thead>
                                <tbody>
                                    @Html.TextAreaFor(x=>x.RejectedRemarks, new { @class = "form-control", @placeholder = "Rejecting Remarks" })

                                </tbody>
                            </table>


                        </div>
                  
                            <button type="button" class="btn btn-default btn-collection-verify-confirm-reject" style="float:right;margin-left:10px"> Confirm Reject</button>
                    
                            <button type="button" class="btn btn-default btn-collection-verify-rejectMessage-close" data-dismiss="modal" style="float:right"> Close</button>
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
 
</div>


