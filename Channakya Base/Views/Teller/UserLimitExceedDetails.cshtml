@model ChannakyaBase.Model.ViewModel.AWtdQueueModel
@using ChannakyaBase.BLL
@using ChannakyaBase.BLL.Service
@{ 
   
}
<div class="col-md-12">
    <div class="content-box">
        <fieldset>
            <legend style="font-size:large;font-weight:bold">              
                    <span>Teller Limit Exceed Verification</span>              
            </legend>


            <table class="table table-striped table-bordered table-responsive">
                <tbody>

                    <tr>
                        <th>Account Number</th>

                        <th>Account Name</th>
                        @if (Model.isslip == true)
                        {
                            <th>Slip No.</th>
                        }
                        else
                        {
                            <th>Cheque No</th>
                        }
                        <th>Transaction Date</th>
                        <th>Payee </th>
                        <th>Amount</th>
                       
                        <th>Type</th>
                       
                            
                    </tr>
                    <tr>
                        <td><span class="control-label">@Model.AccountNumber</span></td>
                        <td><span class="control-label">@Model.AccountName</span></td>
                        <td><span class="control-label">@Model.chqno</span></td>
                        @{
                            CommonService commonServices = new CommonService();
                        }
                        <td>  <span class="control-label">@commonServices.GetDate(Model.tdate)</span></td>
                        <td> <span class="control-label">@Model.notes</span></td>
                        <td> <span class="control-label">@Model.amount.ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span></td>
                        <td> <span class="control-label">@Model.Type</span></td>
                        @*@if (Model.Qstate == 1)
                        {
                            <td>
                                <span class="control-label" style="background-color:seagreen;color:white">
                                    Request By Teller
                                </span>
                            </td>
                        }
                        else if (Model.Qstate == 2)
                        {
                            <td>
                                <span class="control-label" style="background-color:green">
                                    Verify By Cashier
                                </span>
                            </td>
                        }
                        else
                        {
                            <td>
                                <span class="control-label" style="background-color:indianred">
                                    Ready For Transaction
                                </span>
                            </td>
                        }*@
                    </tr>


                </tbody>

            </table>
        </fieldset>
    </div>
</div>
