@model ChannakyaBase.Model.ViewModel.DenoInViewModel

@{
    decimal sum = 0;
}
<div class="table-responsive unverified-deposit-list">
    <table class="table table-striped table-bordered table-responsive">
        <thead>

            <tr>
                <th>Deno</th>
                <th>Piece</th>
                <th>Currency </th>
                <th>Amount </th>


            </tr>
        </thead>

        @foreach (var item in Model.DenoInList)
        {
            decimal Amount = Convert.ToDecimal(item.Deno * item.Piece);
            <tr>
                <td>@item.Deno</td>
                <td>@Math.Abs(Convert.ToInt32(item.Piece))</td>
                <td>

                    @item.Currency
                </td>
                <td>@Math.Abs(Amount).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture) </td>


            </tr>
            sum = sum + Amount;
        }
        <tr>
            <td colspan="3">Total</td>
            <td>@Math.Abs(sum).ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</td>
        </tr>

    </table>
    </div>
