@model ChannakyaBase.Model.ViewModel.RemitDepositModel
    @using ChannakyaBase.BLL
@{ 
    CommonService commonService= new CommonService();
}

<div class="col-md-12">
    <div class="content-box">
        <fieldset>
            <legend style="font-size:large;font-weight:bold">
                <span>Remittance Deposit Details </span>
            </legend>


            <table class="table table-striped table-bordered table-responsive">
                <tbody>

                    <tr>
                        <th> Sender Name</th>
                        <th> Receiver Name</th>

                        <th> Receiver Address</th>
                        <th>Remit Company</th>
                        <th>Branch </th>
                        <th>Amount</th>

                    </tr>
                    <tr>
                        <td><span class="control-label">@Model.SenderName</span></td>
                        <td><span class="control-label">@Model.ReceiverName</span></td>
                        <td><span class="control-label">@Model.ReceiverAddress</span></td>
                        <td>  <span class="control-label">@Model.CompanyName</span></td>
                        <td> <span class="control-label">@commonService.BranchIdToName(@Model.BranchId)</span></td>
                        <td> <span class="control-label">@Model.Amount.ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span></td>
                    </tr>

                </tbody>

            </table>
        </fieldset>


    </div>
</div>




