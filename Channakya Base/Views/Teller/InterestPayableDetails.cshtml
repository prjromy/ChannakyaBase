@model ChannakyaBase.Model.ViewModel.InterestPayableViewModel
@using ChannakyaBase.BLL
@using ChannakyaBase.BLL.Service

<div class="col-md-12">
    <div class="content-box">
        <fieldset>
            <legend style="font-size:large;font-weight:bold">
                <span>Interest Payment Details</span>
            </legend>


            <table class="table table-striped table-bordered table-responsive">
                <tbody>

                    <tr>
                        <th>Account Number</th>

                        <th>Account Name</th>
                        
                            <th>Remarks</th>
                    
                        <th>Transaction Date</th>
                        <th>TNo </th>
                        <th>Amount</th>
                    </tr>
                    <tr>
                        <td><span class="control-label">@Model.AccountNumber</span></td>
                        <td><span class="control-label">@Model.AccountName</span></td>
                        <td><span class="control-label">@Model.InterestPayee</span></td>
                        @{
                            CommonService commonServices = new CommonService();
                        }
                        <td>  <span class="control-label">@commonServices.GetDate(Model.TransactionDate)</span></td>
                        <td> <span class="control-label">@Model.Tno</span></td>
                        <td> <span class="control-label">@Model.InterestAmount.ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span></td>                       
                    </tr>
                    

                </tbody>

            </table>
        </fieldset>
    </div>
</div>

