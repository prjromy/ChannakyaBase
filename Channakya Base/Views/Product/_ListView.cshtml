@model ChannakyaAccounting.Models.ViewModel.ProductDetailViewmodel
@using ChannakyaAccounting.Service.DepositProduct
@{
    var test = Model;
}

<tr class="detailsList">
    <td class="listDrill" id="@Model.PID" style="vertical-align:top;">
         @Model.PName
    </td>
    <td>
        @if (Model.SType == 1)
        {
            <span>Loan </span>
        }
        else
        {
            <span>Product</span>
        }
    </td>
    <td>
        @DepositProductService.GetSchemeNameFromSDID(Model.SDID)

    </td>
    <td></td>

    <td>

    <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs editList" id="@Model.PID" data-title="Edit"><span class="glyphicon glyphicon-pencil"></span></button></p></td>

    <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs deleteNode" id="@Model.PID" data-title="Delete"><span class="glyphicon glyphicon-trash"></span></button></p></td>

</tr>
