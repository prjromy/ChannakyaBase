@model ChannakyaBase.DAL.DatabaseModel.OccupationDef
 
@{
    var myId = Model.Occpn;
}
<div class="edit-section">

    @using (Ajax.BeginForm("_Edit", "OccupationDef", FormMethod.Post
                                                                        , new AjaxOptions
                                                                        {
                                                                            UpdateTargetId = "occupation-list",
                                                                            InsertionMode = InsertionMode.Replace,
                                                                            HttpMethod = "Post",
                                                                            OnSuccess = "editSuccess"
                                                                        }
                                                                        , new { id = "editSubmitForm" }))
    { 

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <fieldset>
                <legend>Edit Occupation </legend>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Occpn)

                <div class="form-group">
                    @Html.LabelFor(model => model.occupation, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.occupation, new { htmlAttributes = new { @class = "form-control focusdiv" } })
                        @Html.ValidationMessageFor(model => model.occupation, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => myId)

                        <br />
                        <input type="button" value="Save" id="btn-edit-submit" class="btn btn-default btnedit" />
                        <input type="button" value="Cancel" id="btn-cancel" class="btn btn-default btn-cancel" />
                    </div>
                </div>
            </fieldset>
        </div>
        }
    </div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


