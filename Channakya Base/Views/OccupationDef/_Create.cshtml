@model ChannakyaBase.DAL.DatabaseModel.OccupationDef

@using (Ajax.BeginForm("_Create", "OccupationDef",
                                                   new AjaxOptions
                                                   {
                                                       UpdateTargetId = "occupation-list",
                                                       InsertionMode = InsertionMode.Replace,
                                                       HttpMethod = "Post",
                                                       OnSuccess = "createSuccess"
                                           //OnFailure = "errMessage"

                                       }
                                                   , new { id = "createSubmitForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <fieldset>
            <legend>New Occupation </legend>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.occupation, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.occupation, new { htmlAttributes = new { @class = "form-control", @placeholder = "Occupation Name" } })
                    @Html.ValidationMessageFor(model => model.occupation, "", new { @class = "text-danger" })
                    <br />
                    <input type="button" value="Save" id="btn-save-submit" class="btn btn-default btn-save " />
                    <input type="button" value="Cancel" id="btn-cancel" class="btn btn-default btn-cancel" />

                </div>
            </div>
        </fieldset>
    </div>
}
   
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

