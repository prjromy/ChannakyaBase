@model List<ChannakyaBase.DAL.DatabaseModel.OccupationDef>
@using ChannakyaBase.BLL.CustomHelper
@using PagedList.Mvc
@using PagedList

<div class="box box-success">
    <div class="box-header with-border">

        
        <div class="box-tools col-md-3" style="padding:5px">
        
            <div class="input-group input-group-sm pull-right" @*style="width: 250px;"*@>
       
                @Html.TextBox("Occupation-search",(string)ViewBag.searchedVal, htmlAttributes: new { @class = "form-control pull-right", @id = "txtsearch", @placeholder = "Search" })
                <div class="input-group-btn">
                    <button type="button" id="searchsubmit" class="btn btn-default"><i class="fa fa-search"></i></button>
                </div>
            </div>        
        </div>
        <br />
        <h3>Occupation List</h3>
       
        @if (Model.Count() != 0)
        {
        <div class="box-body table-responsive no-padding">
            <table class="table">
                <tr>
                    <th class=col-md-10>
                        @Html.DisplayNameFor(model => model.First().occupation)
                    </th>
                    <th class=col-md-2>
                        Action
                    </th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.occupation)
                        </td>
                        <td>
                            <button type="button" class="btn btn-info btn-sm btn-edit glyphicon glyphicon-edit" data-id="@item.Occpn" data-toggle="tooltip" title="Edit"></button>
                            <button type="button" class="btn btn-info btn-sm btn-sm btn-delete glyphicon glyphicon-trash danger" data-id="@item.Occpn" data-val="@item.occupation" data-toggle="tooltip" title="Delete"></button>
                        </td>
                    </tr>
                }

            </table>
        
        </div>
        }
        else
        {
            <h4>No Records Found</h4>
        }
    </div>

</div>
    