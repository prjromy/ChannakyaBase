@model ChannakyaBase.DAL.DatabaseModel.CustCompany
@using ChannakyaBase.BLL.Service
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <fieldset>
            <legend style="font-size:large">Personal Details</legend>
            <div class="form-horizontal">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Company Name </th>
                            <td><span class="control-label"> @Model.CCName</span></td>
                            <th> Company Group </th>
                            @CustomerUtilityService.CompanyGroupList().Where(x => x.Value == Model.CCGroupID.ToString()).Select(x => x.Text).FirstOrDefault();
                            <td>
                                <span class="control-label">
                                    @CustomerUtilityService.CompanyGroupList().Where(x => x.Value == Model.CCGroupID.ToString()).Select(x => x.Text).FirstOrDefault();</span>
                                    @* @Html.DropDownListFor(model => model.CCGroupID, CustomerUtilityService.CompanyGroupList(), "Please Select...", htmlAttributes: new { @class = "form-control" })*@
</td>
                        </tr>
                    </table>
                </div>
            </div>

        </fieldset>
    </div>
    <br />
    <br />

}


