
@model ChannakyaBase.Model.ViewModel.CustomerCompanyViewModel
@using ChannakyaBase.BLL
<h3 class="box-title">Customer Company Group List</h3>
<div class="box-body table-responsive no-padding table-CustomerCompanyList">
    <table class="table table-bordered table-striped table-hover">
        <tr>

            <th>
               <p><b>S.N</b></p>  @*@Html.DisplayFor(x => x.CCGroupID, "S.N")*@
            </th>

            <th>
                @Html.DisplayNameFor(x => x.CCGroupName)
            </th>
            <th>
                Action
            </th>
        </tr>

        @foreach (var item in Model.CustomerCompanyList)
        {

            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.CCGroupID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CCGroupName)
                </td>
                <td>
                    <a class="btn btn-info btn-sm btn-edit-branch glyphicon glyphicon-edit" onclick="EditCustomerCompanyGroup(@item.CCGroupID)"></a>
                    <a class="btn btn-info btn-sm btn-edit-branch glyphicon glyphicon-trash" onclick="DeleteCustomerCompanyGroup(@item.CCGroupID)"></a>
                </td>

            </tr>
        }

    </table>

</div>


