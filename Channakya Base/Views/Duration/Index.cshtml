    $('.Duration-explore').on('click', '.listView', function (event) {
        debugger;

        var viewId = $(this).closest('.Duration-explore').find('#viewType')
        if (viewId.val() == 1) {
            viewId.val(2)
        }
        else {
            viewId.val(1)
