            url: '@Url.Action("_Details", "Duration")',
            contentType: "application/json; charset=utf-8",
            data: {ViewType: listType},
            dataType: "html",
            success: function (html) {
                $(container).html(html);
            },
            error: function () {
                alert("errorwwwwwwwwww");
            }
        });
    });



