@model ChannakyaAccounting.Models.Models.LoanInterestList

                          

                            <div id="loanCalculationRule" class="">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="col-sm-1">
                                                Select
                                            </th>
                                            <th>
                                                Penalty Calculation Rules
                                            </th>
                                            <th>
                                                IsDefault
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                      
                                        @for (int i = 0; i < Model.PolicyPenaltyList.Count(); i++)

                                        {
                                            <tr class="depositCalculationRule">
                                                @Html.HiddenFor(x => x.PolicyPenaltyList[i].PCID)
                                                <td>@Html.CheckBoxFor(x => x.PolicyPenaltyList[i].IsChecked)</td>
                                                <td>
                                                    @Html.Label(Model.PolicyPenaltyList[i].PCNAME, new { @class = "control-label" })
                                                </td>
                                                <td class="loancalcPenaltyboxcontainer">@Html.CheckBoxFor(x => x.PolicyPenaltyList[i].IsDefault, new { @id = "checkbox-loanpenaltycalc" })</td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
<script type="text/javascript">
    $(document).ready(function () {


        $('#loanCalculationRule').on('change', 'input#checkbox-loanpenaltycalc', function (e) {
            debugger;
            var currentevent = $(this);
            e.stopPropagation();
            var container = $(this).closest('#loanCalculationRule');
            var allLoanLists = $(container).find('td.loancalcPenaltyboxcontainer');

            $(allLoanLists).each(function (index, item) {
                $(item).find('input[type="checkbox"]').prop('checked', false);

            });
            $(currentevent).prop('checked', true);

        });
    });
</script>