@model ChannakyaBase.Model.ViewModel.DisburseCashDepositViewModel
@using ChannakyaBase.BLL.CustomHelper
@using ChannakyaBase.BLL
@using ChannakyaBase.BLL.Service
@{ 
    var mod = Model;
}
<fieldset>
    <legend>Cash Details</legend>
    <div class="form-group">
        @Html.Label("Teller", new { @class = "control-label  col-md-2" })
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.RecieveFrom, CreditUtilityService.GetAllTellerList(), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RecieveFrom, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control total-amount" } })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger " })
        </div>
    </div>
</fieldset>