@model ChannakyaBase.DAL.DatabaseModel.ContactDef

@{
    var myId = Model.CNotype;
}
<div class="edit-section">

    @using (Ajax.BeginForm("_Edit", "ContactDef", FormMethod.Post
                                                                                , new AjaxOptions
                                                                                {
                                                                                    UpdateTargetId = "contact-list",
                                                                                    InsertionMode = InsertionMode.Replace,
                                                                                    HttpMethod = "Post",
                                                                                    OnSuccess = "editSuccess"
                                                                                }
                                                                                , new { id = "editSubmitForm" }))


    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <fieldset>
                <legend>New Contact </legend>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CNotype)

                <div class="form-group">
                    @Html.LabelFor(model => model.CNodesc, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.CNodesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => myId)
                        @Html.ValidationMessageFor(model => model.CNodesc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CNoabb, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.CNoabb, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => myId)
                        @Html.ValidationMessageFor(model => model.CNoabb, "", new { @class = "text-danger" })

                        <br />
                        <input type="button" value="Save" id="btn-edit-submit" class="btn btn-default btnedit" />
                        <input type="button" value="Cancel" id="btn-cancel" class="btn btn-default btn-cancel" />
                    </div>
                </div>
            </fieldset>
        </div>
    }
</div>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
 