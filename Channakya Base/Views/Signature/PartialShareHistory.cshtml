@using ChannakyaBase.Model.ViewModel
@model ShareSignatureViewModel
@{
    List<ShareSignatureViewModel> shareimgPath = ViewData["multipleimage"] as List<ShareSignatureViewModel>;
}

<h3 class="box-title">Image History</h3>
<div class="container third-history">

    <div class="col-md-12">
        <div class="row">
            @if (shareimgPath != null)
            {

                foreach (var item in shareimgPath)
                {
                    <div class="history-image">
                        <div class="col-md-3">
                            <div class="thumbnail">
                                <img src="@item.Signature" alt="No image" height="250" width="250" class="col-md-offset-3  img-responsive  preview-image text-center" />
                            </div>
                        </div>
                    </div>
                }


            }
            else
            {
                <div class="empty"><img src="~/images/No Image.png" alt="No image" height="250" width="250" class="col-md-offset-4" /></div>
            }


        </div>
    </div>
</div>

<style>
    .preview-image {
        position: relative;
        /*margin-left: auto;
         margin-right: auto;
         width: 50%;*/
        -webkit-transition: all 200ms ease-in;
        -webkit-transform: scale(1);
        -ms-transition: all 200ms ease-in;
        -ms-transform: scale(1);
        -moz-transition: all 200ms ease-in;
        -moz-transform: scale(1);
        transition: all 200ms ease-in;
        transform: scale(1);
    }

        .preview-image:hover {
            z-index: 2;
            -webkit-transition: all 200ms ease-in;
            -webkit-transform: scale(1.5);
            -ms-transition: all 200ms ease-in;
            -ms-transform: scale(1.5);
            -moz-transition: all 200ms ease-in;
            -moz-transform: scale(1.5);
            transition: all 200ms ease-in;
            transform: scale(1.5);
        }

   
</style>