@model ChannakyaBase.Model.ViewModel.WithdrawViewModel
@using ChannakyaBase.BLL
@using ChannakyaBase.BLL.Service

<div class="col-md-12">
    <div class="content-box">
        <fieldset>
            <legend style="font-size:large;font-weight:bold">
                <span>Cheque Good For Payment Details </span>
            </legend>


            <table class="table table-striped table-bordered table-responsive">
                <tbody>

                    <tr>
                        <th>Branch</th>
                        <th>Account Number</th>

                        <th>Account Name</th>

                        

                        <th>Transaction Date</th>
                        <th>cheque No </th>
                        <th>Amount</th>
                        
                    </tr>
                    <tr>
                        <td><span class="control-label">@Model.BranchName</span></td>
                        <td><span class="control-label">@Model.AccountNumber</span></td>
                        <td><span class="control-label">@Model.AccountName</span></td>                      
                        @{
                            CommonService commonServices = new CommonService();
                        }
                        <td>  <span class="control-label">@commonServices.GetDate(Model.TransDate)</span></td>
                        <td> <span class="control-label">@Model.ChequeNumber</span></td>
                        <td> <span class="control-label">@Model.Amount.ToString("0,0.00", System.Globalization.CultureInfo.InvariantCulture)</span></td>
                    </tr>
                    <tr>
                        <th>Remarks</th>
                        <td colspan="5">@Model.Remarks</td>
                    </tr>
                </tbody>

            </table>
        </fieldset>
    </div>
</div>


