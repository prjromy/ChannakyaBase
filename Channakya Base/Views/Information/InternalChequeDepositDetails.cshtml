@model ChannakyaBase.Model.ViewModel.InternalChequeDepositModel
@using ChannakyaBase.BLL
@using ChannakyaBase.BLL.Service

<div class="col-md-12">
    <div class="content-box">
        <fieldset>
            <legend style="font-size:large;font-weight:bold">
                <span>Internal Cheque Deposit Details </span>
            </legend>
            <fieldset>
                <legend style="font-size:large;font-weight:bold">
                    <span>Sender's Details </span>
                </legend>

                <table class="table table-striped table-bordered table-responsive">
                    <tbody>

                        <tr>
                            <th> Account Name</th>
                            <th> Account Number</th>
                            <th>Transaction Date</th>
                            <th>cheque No </th>
                            <th>Amount</th>

                        </tr>
                        <tr>

                            <td><span class="control-label">@Model.AccountName</span></td>
                            <td><span class="control-label">@Model.FromAccountNumber</span></td>
                            @{
                                CommonService commonServices = new CommonService();
                            }
                            <td>  <span class="control-label">@commonServices.GetDate(Model.Tdate)</span></td>
                            <td> <span class="control-label">@Model.SlpNo</span></td>
                            <td> <span class="control-label">@Model.Amt.ToString(".00")</span></td>
                        </tr>

                    </tbody>

                </table>
            </fieldset>
            <fieldset>
                <legend style="font-size:large;font-weight:bold">
                    <span>Receipient's Details </span>
                </legend>
                <table class="table table-striped table-bordered table-responsive">
                    <tbody>

                        <tr>
                            <th> Account Number</th>
                            <th> Account Number</th>


                        </tr>
                        <tr>
                            <td><span class="control-label">@Model.ToAccountName</span></td>
                            <td><span class="control-label">@Model.ToAccountNumber</span></td>

                        </tr>

                    </tbody>

                </table>
            </fieldset>
        </fieldset>
    </div>
</div>


