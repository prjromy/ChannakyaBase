@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        for (int i = item.cfrom; i <= item.cto; i++)
        {
            <div class="fields" style="height:@chqSize.Height; width:@chqSize.Width;position: relative;">
                <div class="chkitems blocks" id="custname" style="display: inline-block; position: absolute;@chqattribute.AccountNamePostion">
                    <label class="">@item.AccountName</label>
                </div>
                <div class="chkitems blocks" id="accno" style="display: inline-block; position: absolute;@chqattribute.AccountNumberPosition">
                    <label class="">@item.AccountNumber</label>
                </div>
                <div class="chkitems blocks" id="savingtype" style="display: inline-block; position: absolute;@chqattribute.AccountTypePosition">
                    <label class="">@item.AccountType</label>
                </div>
                <div class="chkitems blocks" id="checkno" style="display: inline-block; position: absolute;@chqattribute.ChequeNumberPosition">
                    <label class="">@i</label>
                </div>
                <div class="chkitems blocks" id="checkno" style="display: inline-block; position: absolute;@chqattribute.Cheque2NumberPosition">
                    <label class="">@i</label>
                </div>
                @*<div class="chkitems blocks" id="branch" style="@chqattribute.BranchNamePosition">
