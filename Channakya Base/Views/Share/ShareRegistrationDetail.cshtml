@model ChannakyaBase.Model.ViewModel.ShareNomineeModel

<div class="box box-success  deposit-account-verifier-confirm">
    <div class="box-header with-border">
        <h3 class="box-title">UnVerified Share Registration</h3>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" data-widget="collapse"> <i class="fa fa-minus"></i></button>
            <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div><!-- /.box-tools -->
    </div><!-- /.box-header -->
    <div class="box-body">
        @Html.HiddenFor(x => x.RegNo)


        <fieldset>
            <legend style="font-size:large;font-weight:bold">Customer Info</legend>
            <table class="table table-striped table-bordered table-responsive">
                <thead>
                    <tr>
                        <th>Full Name </th>
                        <th>Mobile</th>
                        <th>Address</th>
                        <th>Contact Person</th>
                    </tr>
                </thead>
                <tbody>



                    <tr>
                        <td>
                            @Model.CustomerDetails.Name
                        </td>
                        <td>@Model.CustomerDetails.Mobile</td>

                        <td>@Model.CustomerDetails.Address</td>
                        <td>@Model.CustomerDetails.ContactPerson</td>
                    </tr>


                </tbody>
            </table>
        </fieldset>
        <fieldset>
            <legend style="font-size:large;font-weight:bold">Nominee Info</legend>
            <br />
            <table class="table table-striped table-bordered table-responsive">
                <thead>
                    <tr>
                        <th>Nominee Name</th>
                        <th>Relation </th>
                        <th>Share</th>
                        <th>Certificate No</th>
                        <th>Contact No</th>

                    </tr>

                </thead>

                <tbody>
                    @foreach (var item in Model.ShareNomineeList)
                    {
                        <tr>
                            <td>@item.NomNam</td>
                            <td>@item.NomRel</td>
                            <td>@item.Share</td>
                            <td>@item.CCertno</td>
                            <td>@item.ContactNo</td>
                            

                        </tr>
                    }

                </tbody>
            </table>
        </fieldset>
       
    </div>
</div>
