@model ChannakyaBase.Model.ViewModel.ShrSPurchaseModel
@using ChannakyaBase.BLL.Service
@{


}
<h4><span class="control-label">Transaction Number: @Model.Tno</span></h4>
<div class="box box-success  deposit-account-verifier-confirm">
    <div class="box-header with-border">
        <h3 class="box-title">UnVerified Share Purchase</h3>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" data-widget="collapse"> <i class="fa fa-minus"></i></button>
            <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div><!-- /.box-tools -->
    </div><!-- /.box-header -->
    <div class="box-body">
        @Html.HiddenFor(x => x.Tno)
        <fieldset>
            <legend style="font-size:large;font-weight:bold">Share Purchase Info</legend>
            <table class="table table-striped table-bordered table-responsive">
                <tbody>

                    <tr>

                        <th>Name</th>

                        <th>Purchase Date</th>
                        <th>Share Quantity</th>

                        <th>Amount</th>
                        <th>Note</th>
                    </tr>
                    <tr>
                        <td>@Model.Name</td>
                        <td>@Model.Pdate</td>
                        <td>@Model.SQty </td>
                        <td>
                            @Model.Amt
                        </td>
                        <td>@Model.Note</td>

                    </tr>
                </tbody>
            </table>
        </fieldset>
        <fieldset>
            <legend style="font-size:large;font-weight:bold">Deno</legend>
            @{Html.RenderAction("UseDenoList", "Teller", new { utno = Model.Tno }); }
        </fieldset>

    </div>
</div>


